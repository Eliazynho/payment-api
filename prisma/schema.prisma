// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  document  String   @unique
  phone     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  charges Charge[] // Um cliente pode ter várias cobranças
}

model Charge {
  id           String         @id @default(uuid())
  amount       Int // Armazenaremos o valor em centavos para evitar problemas com ponto flutuante
  currency     String         @default("BRL")
  status       ChargeStatus   @default(PENDING)
  paymentMethod PaymentMethod

  // Campos específicos por método de pagamento
  boletoDueDate         DateTime? // Data de vencimento para boletos
  creditCardInstallments Int?      // Número de parcelas para cartão de crédito

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamento com Customer
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id])

  @@index([customerId])
}

enum ChargeStatus {
  PENDING
  PAID
  FAILED
  EXPIRED
}

enum PaymentMethod {
  PIX
  CREDIT_CARD
  BOLETO
}